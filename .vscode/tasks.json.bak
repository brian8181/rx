{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build RX",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${fileDirname}/main.cpp",
                "${fileDirname}/rx.cpp",
                "-o",
                "${fileDirname}/rx"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "MAKE DEBUGGDB",
            "type": "shell",
            "command": "make debuggdb",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}