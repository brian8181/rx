{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build RX",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-I/usr/local/include/cppunit/",
                "-lcppunit",
                "${fileDirname}/main.cpp", 
                "${fileDirname}/rx.cpp",
                "-o",
                "${fileDirname}/rx"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}